general {
    colors = true
    interval = 5
}

order += "disk /"
order += "volume master"
order += "wireless wlp2s0"
order += "battery 0"
order += "time"

wireless wlp2s0 {
        format_up = "%ip @ %essid (%quality, %bitrate )"
        format_down = "W: down (Correct wifi chip selected??)"
}

